@model TestPages3.Models.User
@{
    ViewBag.Title = Model.Name;
}
<h2>Пользователь @Model.Name</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Идентификатор</dt>
        <dd>@Model.Id</dd>
 
        <dt>Возраст</dt>
        <dd>@Model.Age</dd>
        
        <dt>Номер Телефона</dt>
        <dd>@Model.PhoneNumber</dd>
    </dl>
    <form asp-controller="Home" asp-action="Details" method="post">
        <div class="form-group">
            <button name="action" value="Back" class="btn btn-default">Назад</button>
        </div>
        </form>
</div>